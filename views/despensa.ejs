<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Despensa</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="icon" href="/img/Logo.ico" type="image/x-icon">
  <style>
    /* Contenedor de fondo */
    .light-red-container {
      background-color: #ffcccc;
      padding: 20px;
      border-radius: 5px;
      margin-bottom: 20px;
    }

    .ingredient-list {
      list-style-type: none;
      padding: 0;
      margin: 0;
    }

    .ingredient-item {
      padding: 10px;
      border-bottom: 1px solid #ccc;
      font-weight: 500;
    }
  </style>
</head>

<body class="bg-light">
  <!-- NavBar -->
  <div>
    <%- include("fragments/nav") %>
  </div>
  <!-- Contenido principal -->
  <div class="container content text-center py-5">
    <!-- Título con fondo y bordes redondeados -->
    <h1 class="mb-4 p-3 text-white rounded">Mi Despensa</h1>
    <!-- Contenedor para la búsqueda y botón -->
    <div class="light-red-container" style="width: 80%; margin: auto;">
      <div class="mb-3 d-flex justify-content-center">
        <div class="input-group" style="width: 80%;">
          <input type="text" id="searchInput" class="form-control" placeholder="Buscar ingrediente...">
          <button href="/inicio/despensa/ingrediente" class="btn btn-custom btn-lg m-2">Añadir ingrediente</button>
        </div>
      </div>
      <!-- Contenedor para la lista de ingredientes -->
      <div class="text-white p-3 rounded" style="width: 90%; margin: auto; background-color: #8c4a3dcc;">
        <ul class="ingredient-list" id="ingredientList">
          <% ingredientes.forEach(function(ingrediente) { %>
            <li class="ingredient-item text-white rounded">
              <%= ingrediente %>
            </li>
            <% }); %>
        </ul>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/public/js/searchIngredient.js"></script>
  <!-- Footer -->
  <div>
    <%- include("fragments/footer") %>
  </div>
</body>

</html>