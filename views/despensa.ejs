<body class="bg-light">
  <!-- NavBar -->
  <div>
    <%- include("fragments/nav") %>
  </div>
  <!-- Contenido principal -->
  <div class="container content text-center py-5">
    <!-- Título con fondo y bordes redondeados -->
    <h1 class="mb-4 p-3 text-white rounded">Mi Despensa</h1>
    <!-- Contenedor para la búsqueda y botón -->
    <div class="light-red-container" style="width: 80%; margin: auto;">
      <div class="mb-3 d-flex justify-content-center">
        <div class="input-group" style="width: 80%;">
          <input type="text" id="searchInput" class="form-control" placeholder="Buscar ingrediente...">
          <button href="/ingredientes" class="btn btn-custom btn-lg m-2">Añadir ingrediente</button>
        </div>
      </div>
      <!-- Contenedor para la lista de ingredientes -->
      <div class="text-white p-3 rounded" style="width: 90%; margin: auto;">
        <ul class="ingredient-list" id="ingredientList">
          <!-- renderizar lista-->
          <% if (ingredients.length === 0) { %>
            <p style= "font-weight: bold; color:#8c4a3dcc">Tu despensa esta vacía</p>
          <% } else { %>
            <% ingredients.forEach(function(ingredient) { %>
              <li class="ingredient-item text-white rounded">
                <span class="ingrediente"><%= ingredient.nombre %></span>
                <span class="cantidad"><%= ingredient.cantidad %></span>
                <span class="unidad"><%= ingredient.tipoUnidad %></span>
              </li>
            <% }); %>
          <% } %>
        </ul>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/searchIngredient.js"></script>
  <!-- Footer -->
  <div>
    <%- include("fragments/footer") %>
  </div>
</body>

</html>