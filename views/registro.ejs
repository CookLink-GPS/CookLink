<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro de Usuario</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: url('https://img.hellofresh.com/w_3840,q_auto,f_auto,c_limit,fl_lossy/hellofresh_website/es/cms/SEO/recipes/ensalada_de_judias_con_jamon_y_langostinos.jpeg') no-repeat center center fixed;
            background-size: cover;
        }

        body::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(116, 112, 112, 0.5);
            z-index: -1;
        }

        .content {
            margin-top: 80px;
        }

        .btn-primary {
            background-color: #9B1C1C !important;
            border-color: #9B1C1C !important;
            color: white !important;
        }

        .btn-primary:hover {
            background-color: #7E1616 !important;
            border-color: #7E1616 !important;
        }

        .card {
            background-color: #F5E1DA !important;
            border: none;
        }

        .card-header {
            background-color: #9B1C1C !important;
            color: white !important;
        }

        .form-control {
            border-color: #D22F2F !important;
        }

        .form-control:focus {
            border-color: #9B1C1C !important;
            box-shadow: 0 0 5px rgba(155, 28, 28, 0.5);
        }

    </style>
</head>
<body class="bg-light">
    <%- include("fragments/nav") %>
    
        
    <div class="container content py-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg">
                    <div class="card-header text-center bg-primary text-white">
                        <h4>Registro de Usuario</h4>
                    </div>
                    <div class="card-body">
                        <form action="/users/registro" method="POST" class="needs-validation" novalidate>
                            <div class="mb-3">
                                <label for="username" class="form-label">Nombre de Usuario</label>
                                <input type="text" name="username" id="username" class="form-control" placeholder="Introduce tu nombre de usuario" required>
                                <div class="invalid-feedback">El nombre de usuario es obligatorio</div>
                            </div>
                            <!-- <div class="mb-3">
                                <label for="email" class="form-label">Correo Electrónico</label>
                                <input type="email" name="email" id="email" class="form-control" placeholder="Introduce tu correo" required>
                                <div class="invalid-feedback">Introduce un correo electrónico válido</div>
                            </div> -->
                            <div class="mb-3">
                                <label for="password" class="form-label">Contraseña</label>
                                <input type="password" name="password" id="password" class="form-control" placeholder="Introduce tu contraseña" required>
                                <div class="invalid-feedback">La contraseña es obligatoria</div>
                            </div>
                            <div class="mb-3">
                                <label for="confirm_password" class="form-label">Confirmar Contraseña</label>
                                <input type="password" name="confirm_password" id="confirm_password" class="form-control" placeholder="Confirma tu contraseña" required>
                                <div class="invalid-feedback">Debes confirmar la contraseña</div>
                            </div>
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">Registrarse</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <% if (mensajeError) { %>
        <div class="alert alert-danger">
            <%= mensajeError %>
        </div>
        <% } %>

    <script>
    // Validación de Bootstrap
    (() => {
    'use strict';
    const forms = document.querySelectorAll('.needs-validation');
    Array.from(forms).forEach(form => {
        form.addEventListener('submit', event => {
        if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
        }
        form.classList.add('was-validated');
        }, false);
    });
    })();
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>