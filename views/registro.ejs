<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro de Usuario</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css" >
</head>
<body class="bg-light">
    <div>
        <%- include("fragments/nav") %>
    </div>
        
    <div class="container content py-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg">
                    <div class="card-header text-center bg-primary text-white">
                        <h4>Registro de Usuario</h4>
                    </div>
                    <div class="card-body">
                        <form action="/users/registro" method="POST" class="needs-validation" novalidate>
                            <div class="mb-3">
                                <label for="username" class="form-label">Nombre de Usuario</label>
                                <input type="text" name="username" id="username" class="form-control" placeholder="Introduce tu nombre de usuario" required>
                                <div class="invalid-feedback">El nombre de usuario es obligatorio</div>
                                <% if (mensajeExito) { %>
                                    <div class="valid-feedback">
                                        Looks good!
                                    </div>
                                <% } %>
                            </div>
                            <!-- <div class="mb-3">
                                <label for="email" class="form-label">Correo Electrónico</label>
                                <input type="email" name="email" id="email" class="form-control" placeholder="Introduce tu correo" required>
                                <div class="invalid-feedback">Introduce un correo electrónico válido</div>
                            </div> -->
                            <div class="mb-3">
                                <label for="password" class="form-label">Contraseña</label>
                                <input type="password" name="password" id="password" class="form-control
                                    <%= mensajeError && mensajeError.some(e => e.path === 'password') ? 'is-invalid' : (mensajeExito ? 'is-valid' : '') %>"
                                    placeholder="Introduce tu contraseña" required>
                                <% if (mensajeError && mensajeError.some(e => e.path === 'password')) { %>
                                    <div class="invalid-feedback">
                                        <% mensajeError.filter(e => e.path === 'password').forEach(error => { %>
                                            <%= error.msg %><br>
                                        <% }); %>
                                    </div>
                                <% } %>
                                <% if (mensajeExito) { %>
                                    <div class="valid-feedback">
                                        Looks good!
                                    </div>
                                <% } %>
                            </div>
                            
                            <div class="mb-3">
                                <label for="confirm_password" class="form-label">Confirmar Contraseña</label>
                                <input type="password" name="confirm_password" id="confirm_password" class="form-control
                                    <%= mensajeError && mensajeError.some(e => e.path === 'confirm_password') ? 'is-invalid' : (mensajeExito ? 'is-valid' : '') %>"
                                    placeholder="Confirma tu contraseña" required>
                                <% if (mensajeError && mensajeError.some(e => e.path === 'confirm_password')) { %>
                                    <div class="invalid-feedback">
                                        <% mensajeError.filter(e => e.path === 'confirm_password').forEach(error => { %>
                                            <%= error.msg %><br>
                                        <% }); %>
                                    </div>
                                <% } %>
                                <% if (mensajeExito) { %>
                                    <div class="valid-feedback">
                                        Looks good!
                                    </div>
                                <% } %>
                            </div>
                            
                            
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-custom">Registrarse</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    

    <!-- <% if (mensajeError && mensajeError.length > 0) { %>
        <div class="alert alert-danger">
            <ul>
                <% mensajeError.forEach(function(error) { %>
                    <li><%= error.msg %></li>
                <% }); %>
            </ul>
        </div>
    <% } %>
    
    <% if (mensajeExito) { %>
        <div class="alert alert-success"><%= mensajeExito %></div>
    <% } %> -->

    <script>
            (() => {
        'use strict'

        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        const forms = document.querySelectorAll('.needs-validation')

        // Loop over them and prevent submission
        Array.from(forms).forEach(form => {
            form.addEventListener('submit', event => {
            if (!form.checkValidity()) {
                event.preventDefault()
                event.stopPropagation()
            }

            form.classList.add('was-validated')
            }, false)
        })
        })()
    </script>




    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <div>
        <%- include("fragments/footer") %>
    </div>
</body>
</html>