<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro de Usuario</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" href="/img/Logo.ico" type="image/x-icon">
</head>

<body class="bg-light">
    <div>
        <%- include("fragments/nav") %>
    </div>

    <% const form=typeof formData !=="undefined" ? formData : {}; %>

        <div class="container content py-5">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card shadow-lg">
                        <div class="card-header text-center bg-primary text-white">
                            <h4>Registro de Usuario</h4>
                        </div>
                        <div class="card-body">
                            <form action="/usuarios/registro" method="POST" class="needs-validation" novalidate>

                                <div class="mb-3">
                                    <label for="username" class="form-label">Nombre de Usuario</label>
                                    <input type="text" name="username" id="username" class="form-control"
                                        placeholder="Introduce tu nombre de usuario" required
                                        value="<%= form.username || '' %>">
                                    <div class="invalid-feedback">El nombre de usuario es obligatorio</div>
                                    <% if (mensajeError?.username) { %>
                                        <div class="invalid-feedback d-block">
                                            <%= mensajeError.username %>
                                        </div>
                                        <% } %>
                                </div>

                                <div class="mb-3">
                                    <label for="password" class="form-label">Contraseña</label>
                                    <input type="password" name="password" id="password" class="form-control"
                                        placeholder="Introduce tu contraseña" required>
                                    <div class="invalid-feedback">La contraseña es obligatoria</div>
                                    <% if (mensajeError?.password) { %>
                                        <div class="invalid-feedback d-block">
                                            <%= mensajeError.password %>
                                        </div>
                                        <% } %>
                                </div>

                                <div class="mb-3">
                                    <label for="confirm_password" class="form-label">Confirmar Contraseña</label>
                                    <input type="password" name="confirm_password" id="confirm_password"
                                        class="form-control" placeholder="Confirma tu contraseña" required>
                                    <div class="invalid-feedback">La confirmación de la contraseña es obligatoria
                                    </div>
                                    <% if (mensajeError?.confirm_password) { %>
                                        <div class="invalid-feedback d-block">
                                            <%= mensajeError.confirm_password %>
                                        </div>
                                        <% } %>
                                </div>

                                <% if (mensajeError?.general) { %>
                                    <div class="alert alert-danger">
                                        <%= mensajeError.general %>
                                    </div>
                                    <% } %>

                                        <div class="d-grid gap-2">
                                            <button type="submit" class="btn btn-custom">Registrarse</button>
                                        </div>
                            </form>
                        </div>
                    </div>
                    <a href="/usuarios/inicio" class="btn btn-custom btn-lg m-2">Volver</a>
                </div>
            </div>

            <% if (mensajeExito) { %>
                <div class="exitoModal" id="exitoModal">
                    <div class="exitoModal-content">
                        <div class="exitoModal-header bg-success text-green">
                            <h5 class="exitoModal-title" id="exitoModalLabel">¡Éxito!</h5>
                        </div>
                        <div class="exitoModal-body">
                            <%= mensajeExito %>
                        </div>
                        <div class="exitoModal-footer">
                            <a href="/usuarios/inicio" class="btn btn-success">Aceptar</a>
                        </div>
                    </div>
                </div>
                <% } %>

        </div>

        <script src="/js/registroScript.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

        <div>
            <%- include("fragments/footer") %>
        </div>
</body>

</html>