<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Usuarios</title>
    <!-- Vincula Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .content {
            margin-top: 80px;
        }
    </style>
</head>
<body class="bg-light">
    <!-- ESTO SERÍA PONERLO EN UN EJS SÓLO PARA EL NAV -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">CookLink</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/users">Lista de Usuarios</a>
                    </li>
                    <!-- AQUÍ EL RESTO DE ENLACES Y FALTA UN MENÚ HAMBURGUESA Y UN SEARCH ETC -->
                </ul>
            </div>
        </div>
    </nav>
    <!-- ESTO SERÍA PONERLO EN UN EJS SÓLO PARA EL NAV -->
    <div class="container content py-5">
        <div class="row mb-4">
            <div class="col-12 text-center">
                <h1 class="display-4">Lista de Usuarios</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <% if (users.length > 0) { %>
                            <ul class="list-group">
                                <% users.forEach(user => { %>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <%= user.username %> - <%= user.password %>
                                        <!-- <a href="/users/delete/<%= user.id %>" class="btn btn-danger btn-sm">Eliminar</a> -->
                                        <a href="#" onclick="eliminarUsuario('<%= user.id %>')" class="btn btn-danger btn-sm">Eliminar Usuario</a>

                                        <script>
                                        function eliminarUsuario(id) {
                                                if (confirm("¿Estás seguro de eliminar este usuario?")) {
                                                        fetch(`/users/delete/${id}`, {
                                                        method: 'DELETE',
                                                        headers: {
                                                            'Content-Type': 'application/json'
                                                        }
                                                    })
                                                    .then(response => {
                                                        if (response.ok) {
                                                            alert("Usuario eliminado correctamente");
                                                            window.location.reload(); // Recarga la página solo si se elimina correctamente
                                                        } else {
                                                            alert("Error al eliminar el usuario");
                                                        }
                                                        })
                                                    .catch(err => console.error(err));
                                                }
                                            }


                                        </script>
                                        
                                    </li>
                                <% }); %>
                            </ul>
                        <% } else { %>
                            <p class="text-center">No hay usuarios registrados.</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <!-- Formulario para agregar usuario -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Agregar Nuevo Usuario</h5>
                        <form action="/users/create" method="POST">
                            <div class="mb-3">
                                <input type="text" name="name" class="form-control" placeholder="Nombre" required>
                            </div>
                            <button type="submit" class="btn btn-primary">Agregar Usuario</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
  

</html>

