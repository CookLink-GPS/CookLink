<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Añadir ingrediente</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" href="/img/Logo.ico" type="image/x-icon">
</head>

<body class="bg-light">
    <div>
        <%- include("fragments/nav") %>
    </div>


    <div class="container content py-5">
        <% if (mensajeError && mensajeError.length> 0) { %>
            <div class="alert alert-danger row justify-content-center">
                <ul>
                    <% mensajeError.forEach(function(error) { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }); %>
                </ul>
            </div>
            <% } %>

                <% if (mensajeExito) { %>
                    <div class="alert alert-success">
                        <%= mensajeExito %>
                    </div>
                    <% } %>
                        <div class="row justify-content-center">

                            <div class="col-md-6">
                                <div class="card shadow-lg">
                                    <div class="card-header text-center bg-primary text-white">
                                        <h4>Añadir ingredientes</h4>
                                    </div>
                                    <div class="card-body">
                                        <form action="/ingredientesBD/addIngrediente" method="POST"
                                            class="needs-validation" novalidate>
                                            <!-- Ingredientes -->
                                            <div>
                                                <label for="ingredientes" class="form-label">Ingredientes</label>
                                                <select name="ingredientes" id="ingredientes" class="form-select"
                                                    required>
                                                    <option value="" disabled selected>Seleccione un ingrediente
                                                    </option>
                                                    <% ingredients.forEach(function(ingrediente) { %>
                                                        <option value="<%= ingrediente.id %>">
                                                            <%= ingrediente.nombre %>
                                                        </option>
                                                        <% }); %>
                                                </select>

                                                <!-- Caducidad -->
                                                <div class="mt-2 mb-2">
                                                    <label for="caducidad" class="form-label">Caducidad</label>
                                                    <div class="row g-2">
                                                        <div class="col-md">
                                                            <div class="form-floating">
                                                                <input type="text" class="form-control" id="dia"
                                                                    name="dia" placeholder="dia">
                                                                <label for="dia">Día</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md">
                                                            <div class="form-floating">
                                                                <input type="text" class="form-control" id="mes"
                                                                    name="mes" placeholder="mes">
                                                                <label for="mes">Mes</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md">
                                                            <div class="form-floating">
                                                                <input type="text" class="form-control" id="anio"
                                                                    name="anio" placeholder="anio">
                                                                <label for="anio">Año</label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <!-- Cantidad -->
                                                <div class="mb-3">
                                                    <label for="cantidad" class="form-label">Cantidad</label>
                                                    <input type="text" name="cantidad" id="cantidad"
                                                        class="form-control" placeholder="Confirma la cantidad"
                                                        required>
                                                </div>
                                            </div>

                                            <div class="d-grid gap-2">
                                                <button type="submit" class="btn btn-custom">Añadir</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>


                            <div class="col-md-6">
                                <div class="card shadow-lg">
                                    <div class="card-header text-center bg-primary text-white">
                                        <h4>Ingredientes Despensa</h4>
                                    </div>
                                    <div class="card-body">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th scope="col">Nombre</th>
                                                    <th scope="col">Caducidad</th>
                                                    <th scope="col">Cantidad</th>
                                                </tr>
                                            </thead>
                                            <tbody class="table-group-divider">
                                                <% if (pantryIngredients && pantryIngredients.length> 0) { %>
                                                    <% pantryIngredients.forEach(item=> { %>
                                                        <tr>
                                                            <td>
                                                                <%= item.nombre %>
                                                            </td>
                                                            <td>
                                                                <%= item.caducidad %>
                                                            </td>
                                                            <td>
                                                                <%= item.cantidad %>
                                                                    <%= item.unidad %>
                                                            </td>
                                                        </tr>
                                                        <% }) %>
                                                            <% } else { %>
                                                                <tr>
                                                                    <td colspan="3" class="text-center">Ningún
                                                                        ingrediente en la despensa.</td>
                                                                </tr>
                                                                <% } %>
                                            </tbody>

                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <div>
        <%- include("fragments/footer") %>
    </div>
</body>

</html>