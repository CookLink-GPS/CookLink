<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mi Despensa</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" href="/img/Logo.ico" type="image/x-icon">
</head>
<body class="bg-light">
    <!-- NavBar -->
    <div>
        <%- include("fragments/nav") %>
    </div>

    <div class="container content text-center py-5">
        <h1 class="mb-4 p-3 text-white rounded">Mi Despensa</h1>

        <!-- Tabla de ingredientes -->
        <div class="table-responsive">
            <table class="table shadow-sm" style="background-color: #EBD4C3; border: 2px solid #A25E4B;">
                <thead style="background-color: #8C4A3D; color: #EBD4C3;">
                    <tr>
                        <th>Nombre Ingrediente</th>
                        <th>Cantidad</th>
                        <th>Fecha de Caducidad</th>
                        <th>Remover</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (ingredients.length > 0) { %>
                        <% ingredients.forEach(ingredient => { %>
                            <tr>
                                <td><%= ingredient.nombre_ingrediente %></td>
                                <td><%= ingredient.cantidad || "N/A" %> unidades</td>
                                <td><%= ingredient.caducidad || "No disponible" %></td>
                                <td>
                                    <button 
                                        type="button" 
                                        class="btn btn-danger btn-sm" 
                                        data-bs-toggle="modal" 
                                        data-bs-target="#confirmDeleteModal"
                                        data-ingredient-id="<%= ingredient.id_ingrediente %>"
                                    >
                                        Eliminar
                                    </button>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="4" class="text-center text-muted">No tienes ingredientes en la despensa.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

        <!-- Botón de Volver -->
        <a href="/" class="btn btn-custom btn-lg m-2">Volver</a>
    </div>

    <!-- Modal de Confirmación -->
    <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmDeleteModalLabel">Confirmar Eliminación</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    ¿Estás seguro de que deseas eliminar este ingrediente de tu despensa?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <form id="deleteForm" method="POST" action="">
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div>
        <%- include("fragments/footer") %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Configurar el modal para eliminar el ingrediente correcto
        document.addEventListener('DOMContentLoaded', function () {
            const deleteModal = document.getElementById('confirmDeleteModal');
            const deleteForm = document.getElementById('deleteForm');

            deleteModal.addEventListener('show.bs.modal', function (event) {
                const button = event.relatedTarget; // Botón que activó el modal
                const ingredientId = button.getAttribute('data-ingredient-id'); // Obtener el ID del ingrediente
                deleteForm.action = `/pantry/delete/${ingredientId}`; // Actualizar la acción del formulario
            });
        });
    </script>
</body>
</html>